@model BE.Core.Entities.Movies.Genre
@{
    ViewData["Title"] = "Thêm Thể Loại - Admin";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-plus-circle me-2 text-cinema-red"></i>
            Thêm Thể Loại Mới
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-card p-4">
                <form method="post" asp-action="Create">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label required">Tên Thể Loại</label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Vd: Hành Động" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Slug" class="form-label">Slug (tự động tạo nếu bỏ trống)</label>
                        <input asp-for="Slug" class="form-control" placeholder="hanh-dong" />
                        <div class="form-text">URL-friendly: chữ thường, dấu - thay khoảng trắng</div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-cinema-red btn-lg">
                            <i class="bi bi-check-circle me-2"></i>
                            Lưu
                        </button>
                        <a href="/Admin/Genres" class="btn btn-outline-light btn-lg ms-2">
                            <i class="bi bi-x-circle me-2"></i>
                            Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .required::after {
        content: " *";
        color: #dc2626;
    }
</style>
