<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CineMax Admin</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    
    <style>
        .admin-sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #1a1a2e 0%, #0f0f1e 100%);
            border-right: 1px solid #333;
        }
        
        .admin-nav-link {
            color: #aaa;
            padding: 12px 20px;
            display: block;
            text-decoration: none;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }
        
        .admin-nav-link:hover,
        .admin-nav-link.active {
            color: #fff;
            background: rgba(220, 38, 38, 0.1);
            border-left-color: #dc2626;
        }
        
        .admin-content {
            background: #0a0a0a;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Admin Sidebar -->
        <div class="admin-sidebar" style="width: 260px;">
            <!-- Logo -->
            <div class="p-4 border-bottom border-secondary">
                <a href="/" class="text-decoration-none">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-camera-reels-fill fs-3 me-2 text-danger"></i>
                        <div>
                            <h5 class="mb-0 text-white fw-bold">CineMax</h5>
                            <small class="text-muted">Admin Panel</small>
                        </div>
                    </div>
                </a>
            </div>
            
            <!-- Navigation -->
            <nav class="mt-3">
                <a href="/Admin/Dashboard" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a href="/Admin/Movies" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Movies" ? "active" : "")">
                    <i class="bi bi-film me-2"></i> Quản Lý Phim
                </a>
                <a href="/Admin/Showtimes" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Showtimes" ? "active" : "")">
                    <i class="bi bi-calendar-event me-2"></i> Lịch Chiếu
                </a>
                <a href="/Admin/Cinemas" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cinemas" ? "active" : "")">
                    <i class="bi bi-building me-2"></i> Rạp Chiếu
                </a>
                <a href="/Admin/Rooms" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Rooms" ? "active" : "")">
                    <i class="bi bi-door-open me-2"></i> Phòng Chiếu
                </a>
                <a href="/Admin/Genres" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Genres" ? "active" : "")">
                    <i class="bi bi-tags me-2"></i> Thể Loại
                </a>
                <a href="/Admin/Foods" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Foods" ? "active" : "")">
                    <i class="bi bi-cup-straw me-2"></i> Đồ Ăn
                </a>
                
                <hr class="border-secondary mx-3">
                
                <a href="/" class="admin-nav-link">
                    <i class="bi bi-house-door me-2"></i> Về Trang Chủ
                </a>
                <form method="post" action="/Account/Logout" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="admin-nav-link w-100 text-start border-0 bg-transparent">
                        <i class="bi bi-box-arrow-right me-2"></i> Đăng Xuất
                    </button>
                </form>
            </nav>
        </div>
        
        <!-- Main Content -->
        <div class="admin-content flex-grow-1">
            <!-- Top Bar -->
            <div class="bg-dark border-bottom border-secondary px-4 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-white">@ViewData["Title"]</h5>
                    <div class="d-flex align-items-center gap-3">
                        <!-- Language Switcher -->
                        <partial name="_LanguageSwitcher" />
                        
                        <div class="text-muted">
                            <i class="bi bi-person-circle me-1"></i>
                            @User.Identity?.Name
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- TempData Notifications -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <!-- Page Content -->
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>
