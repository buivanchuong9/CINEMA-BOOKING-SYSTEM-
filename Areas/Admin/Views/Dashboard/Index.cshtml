            }));
            moviesChart.drawHorizontalBarChart(formattedMovies);
            
            console.log('‚úÖ T·∫•t c·∫£ bi·ªÉu ƒë·ªì ƒë√£ ƒë∆∞·ª£c kh·ªüi t·∫°o!');
        } catch (error) {
            console.error('‚ùå L·ªói khi kh·ªüi t·∫°o bi·ªÉu ƒë·ªì:', error);
        }

        // Redraw on resize
        let resizeTimeout;
        window.addEventListener('resize', function() {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => location.reload(), 500);
        });
    });
</script>
