        console.log('üìä D·ªØ li·ªáu doanh thu:', revenueData);
        console.log('üìä D·ªØ li·ªáu tr·∫°ng th√°i:', statusData);
        console.log('üìä D·ªØ li·ªáu phim:', moviesData);
        
        // Fallback data
        if (!revenueData || revenueData.length === 0) {
            const today = new Date();
            revenueData = [];
            for (let i = 6; i >= 0; i--) {
                const date = new Date(today);
                date.setDate(date.getDate() - i);
