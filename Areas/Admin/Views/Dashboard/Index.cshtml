    window.addEventListener('load', function() {
        console.log('üé¨ CineMax Dashboard - Kh·ªüi t·∫°o bi·ªÉu ƒë·ªì...');
        
        var revenueData = @Html.Raw(JsonSerializer.Serialize(revenueChart));
        var statusData = @Html.Raw(JsonSerializer.Serialize(bookingByStatus));
