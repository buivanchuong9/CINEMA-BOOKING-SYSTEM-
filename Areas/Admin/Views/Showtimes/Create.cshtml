@model BE.Core.Entities.Movies.Showtime
@{
    ViewData["Title"] = "Tạo Lịch Chiếu - Admin";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-plus-circle me-2 text-cinema-red"></i>
            Tạo Lịch Chiếu Mới
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="glass-card p-4">
                <form method="post" asp-action="Create" id="showtimeForm">
                    @Html.AntiForgeryToken()
                    
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="MovieId" class="form-label required">Chọn Phim</label>
                            <select asp-for="MovieId" asp-items="ViewBag.MovieSelectList" class="form-select form-select-lg">
                                <option value="">-- Chọn phim đang chiếu --</option>
                            </select>
                            <span asp-validation-for="MovieId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label required">Ngày Chiếu</label>
                            <input type="date" id="showDate" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label required">Giờ Chiếu</label>
                            <select id="showTime" class="form-select" required>
                                <option value="">-- Chọn giờ --</option>
                                <option value="08:00">08:00</option>
                                <option value="10:30">10:30</option>
                                <option value="13:00">13:00</option>
                                <option value="15:30">15:30</option>
                                <option value="18:00">18:00</option>
                                <option value="20:30">20:30</option>
                                <option value="22:45">22:45</option>
                            </select>
                        </div>

                        <!-- Hidden field for StartTime -->
                        <input type="hidden" asp-for="StartTime" id="StartTime" />

                        <div class="col-md-6">
                            <label class="form-label required">Chọn Rạp</label>
                            <select asp-items="ViewBag.CinemaSelectList" class="form-select" id="cinemaSelect" required>
                                <option value="">-- Chọn rạp --</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="RoomId" class="form-label required">Chọn Phòng</label>
                            <select asp-for="RoomId" class="form-select" id="roomSelect" style="pointer-events: none; opacity: 0.6;" required>
                                <option value="">-- Chọn rạp trước --</option>
                            </select>
                            <span asp-validation-for="RoomId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="BasePrice" class="form-label required">Giá Vé Cơ Bản (VNĐ)</label>
                            <input asp-for="BasePrice" type="number" class="form-control" value="75000" step="1000" />
                            <div class="form-text">Giá sẽ điều chỉnh theo loại ghế</div>
                            <span asp-validation-for="BasePrice" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Tổng Ghế Khả Dụng</label>
                            <input type="text" class="form-control" id="totalSeats" readonly value="0 ghế" />
                        </div>

                        <div class="col-md-12 mt-4">
                            <button type="submit" class="btn btn-cinema-red btn-lg">
                                <i class="bi bi-check-circle me-2"></i>
                                Tạo Lịch Chiếu
                            </button>
                            <a href="/Admin/Showtimes" class="btn btn-outline-light btn-lg ms-2">
                                <i class="bi bi-x-circle me-2"></i>
                                Hủy
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .required::after {
        content: " *";
        color: #dc2626;
    }
</style>

<script defer>
window.addEventListener('load', function() {
    // Combine date + time into StartTime before submit
    function updateStartTime() {
        var date = document.getElementById('showDate').value;
        var time = document.getElementById('showTime').value;
        if (date && time) {
            var dateTimeString = date + 'T' + time + ':00';
            document.getElementById('StartTime').value = dateTimeString;
        }
    }

    document.getElementById('showDate').addEventListener('change', updateStartTime);
    document.getElementById('showTime').addEventListener('change', updateStartTime);

    // Load rooms when cinema selected via AJAX
    document.getElementById('cinemaSelect').addEventListener('change', function() {
        var cinemaId = this.value;
        var roomSelect = document.getElementById('roomSelect');
        
        console.log('Cinema selected:', cinemaId);
        
        roomSelect.innerHTML = '<option value="">-- Đang tải... --</option>';
        roomSelect.style.pointerEvents = 'none';
        roomSelect.style.opacity = '0.6';
        document.getElementById('totalSeats').value = '0 ghế';
        
        if (!cinemaId) {
            roomSelect.innerHTML = '<option value="">-- Chọn rạp trước --</option>';
            return;
        }

        // AJAX call to get rooms by cinema
        fetch('/Admin/Rooms/GetRoomsByCinema?cinemaId=' + cinemaId)
            .then(response => response.json())
            .then(rooms => {
                console.log('Rooms loaded:', rooms);
                roomSelect.innerHTML = '<option value="">-- Chọn phòng --</option>';
                
                if (rooms && rooms.length > 0) {
                    rooms.forEach(function(room) {
                        var totalSeats = room.totalRows * room.seatsPerRow;
                        var option = document.createElement('option');
                        option.value = room.id;
                        option.textContent = room.name + ' (' + totalSeats + ' ghế)';
                        option.dataset.seats = totalSeats;
                        roomSelect.appendChild(option);
                    });
                    // Enable dropdown
                    roomSelect.style.pointerEvents = 'auto';
                    roomSelect.style.opacity = '1';
                    console.log('Room dropdown enabled with', rooms.length, 'rooms');
                } else {
                    roomSelect.innerHTML = '<option value="">-- Không có phòng nào --</option>';
                    console.warn('No rooms found for cinema:', cinemaId);
                }
            })
            .catch(error => {
                console.error('Error loading rooms:', error);
                roomSelect.innerHTML = '<option value="">-- Lỗi tải phòng --</option>';
                roomSelect.style.pointerEvents = 'auto';
                roomSelect.style.opacity = '1';
                alert('Lỗi khi tải danh sách phòng. Vui lòng thử lại!');
            });
    });

    // Update total seats when room selected
    document.getElementById('roomSelect').addEventListener('change', function() {
        var selectedOption = this.options[this.selectedIndex];
        var seats = selectedOption.dataset.seats;
        if (seats) {
            document.getElementById('totalSeats').value = seats + ' ghế';
        } else {
            document.getElementById('totalSeats').value = '0 ghế';
        }
    });

    // Validate before submit
    document.getElementById('showtimeForm').addEventListener('submit', function(e) {
        updateStartTime();
        
        var movieId = document.getElementById('MovieId').value;
        var startTime = document.getElementById('StartTime').value;
        var roomId = document.getElementById('RoomId').value;
        
        if (!movieId) {
            e.preventDefault();
            alert('Vui lòng chọn phim!');
            return false;
        }
        
        if (!startTime) {
            e.preventDefault();
            alert('Vui lòng chọn ngày và giờ chiếu!');
            return false;
        }
        
        if (!roomId) {
            e.preventDefault();
            alert('Vui lòng chọn rạp và phòng chiếu!');
            return false;
        }
        
        // All validations passed, allow submit
        return true;
    });
});
</script>
