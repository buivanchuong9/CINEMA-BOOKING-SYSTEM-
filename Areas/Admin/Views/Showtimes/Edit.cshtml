@model BE.Core.Entities.Movies.Showtime
@{
    ViewData["Title"] = "Sửa Lịch Chiếu - Admin";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-pencil-square me-2 text-cinema-red"></i>
            Sửa Lịch Chiếu
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="glass-card p-4">
                <form method="post" asp-action="Edit">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="EndTime" />
                    
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="MovieId" class="form-label required">Chọn Phim</label>
                            <select asp-for="MovieId" asp-items="ViewBag.MovieSelectList" class="form-select form-select-lg">
                                <option value="">-- Chọn phim --</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="RoomId" class="form-label required">Chọn Phòng</label>
                            <select asp-for="RoomId" asp-items="ViewBag.RoomSelectList" class="form-select">
                                <option value="">-- Chọn phòng --</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="BasePrice" class="form-label required">Giá Vé Cơ Bản (VNĐ)</label>
                            <input asp-for="BasePrice" type="number" class="form-control" step="1000" />
                        </div>

                        <div class="col-md-12">
                            <label asp-for="StartTime" class="form-label required">Thời Gian Chiếu</label>
                            <input asp-for="StartTime" type="datetime-local" class="form-control" />
                            <div class="form-text">Thời gian kết thúc sẽ tự động tính dựa trên thời lượng phim</div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="IsActive" class="form-label">Trạng Thái</label>
                            <select asp-for="IsActive" class="form-select">
                                <option value="true">Hoạt Động</option>
                                <option value="false">Ngừng Hoạt Động</option>
                            </select>
                        </div>

                        <div class="col-md-12">
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Lưu ý:</strong> Nếu có người đặt vé rồi, tránh thay đổi phim hoặc phòng chiếu.
                            </div>
                        </div>

                        <div class="col-md-12 mt-4">
                            <button type="submit" class="btn btn-cinema-red btn-lg">
                                <i class="bi bi-save me-2"></i>
                                Cập Nhật
                            </button>
                            <a href="/Admin/Showtimes" class="btn btn-outline-light btn-lg ms-2">
                                <i class="bi bi-x-circle me-2"></i>
                                Hủy
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .required::after {
        content: " *";
        color: #dc2626;
    }
</style>
