<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CineMax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    
    <!-- Swiper.js CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    
    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    
    <!-- AOS (Animate On Scroll) CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css">
    
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/typography-fix.css" asp-append-version="true"/>
</head>
<body>
    <!-- Sticky Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top cinema-navbar">
        <div class="container-fluid px-4">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-camera-reels-fill fs-3 me-2 accent-text"></i>
                <span class="fw-bold fs-4">CineMax</span>
            </a>
            
            <!-- Mobile Toggle -->
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i> Trang Chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Movies" asp-action="Index">
                            <i class="bi bi-film me-1"></i> Phim
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Cinemas" asp-action="Index">
                            <i class="bi bi-building me-1"></i> Rạp Chiếu
                        </a>
                    </li>
                </ul>
                
                <!-- Search & Auth -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Search Icon -->
                    <button class="btn btn-link text-white p-0" type="button" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="bi bi-search fs-5"></i>
                    </button>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- User đã đăng nhập -->
                        <div class="dropdown">
                            <button class="btn btn-outline-light rounded-pill px-4 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>
                                @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/Account/Profile">
                                        <i class="bi bi-person me-2"></i>
                                        Hồ Sơ Cá Nhân
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Booking/MyBookings">
                                        <i class="bi bi-ticket-perforated me-2"></i>
                                        Vé Của Tôi
                                    </a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i>
                                            Trang Quản Trị
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>
                                            Đăng Xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- User chưa đăng nhập -->
                        <a class="btn btn-outline-light rounded-pill px-4" href="/Account/Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>
                            Đăng Nhập
                        </a>
                        <a class="btn btn-cinema-red rounded-pill px-4" href="/Account/Register">
                            Đăng Ký
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- TempData Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="cinema-footer mt-5 py-5">
        <div class="container">
            <div class="row g-4">
                <!-- Company Info -->
                <div class="col-lg-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-camera-reels-fill fs-3 me-2 accent-text"></i>
                        <h5 class="mb-0 fw-bold">CineMax</h5>
                    </div>
                    <p class="text-muted">
                        Trải nghiệm sự kỳ diệu của rạp phim với sự thoải mái cao cấp,
                        công nghệ tiên tiến và những khoảnh khắc khó quên.
                    </p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="social-link">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-link">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-link">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="social-link">
                            <i class="bi bi-youtube"></i>
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-lg-2 col-md-4">
                    <h6 class="fw-bold mb-3">Liên Kết Nhanh</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Về Chúng Tôi</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Khuyến Mãi</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Thẻ Quà Tặng</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Liên Hệ</a></li>
                    </ul>
                </div>
                
                <!-- Support -->
                <div class="col-lg-2 col-md-4">
                    <h6 class="fw-bold mb-3">Hỗ Trợ</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Câu Hỏi Thường Gặp</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Chính Sách Bảo Mật</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Điều Khoản Sử Dụng</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Chính Sách Hoàn Tiền</a></li>
                    </ul>
                </div>
                
                <!-- Contact -->
                <div class="col-lg-4 col-md-4">
                    <h6 class="fw-bold mb-3">Liên Hệ</h6>
                    <ul class="list-unstyled footer-contact">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt-fill me-2 accent-text"></i>
                            <span>Đống Đa, Hà Nội</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill me-2 accent-text"></i>
                            <span>0369062042</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill me-2 accent-text"></i>
                            <span>support@cinemax.com</span>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- Copyright -->
            <hr class="my-4 border-secondary">
            <div class="text-center text-muted">
                <p class="mb-0">&copy; @DateTime.Now.Year CineMax. BÙI VĂN CHƯƠNG</p>
            </div>
        </div>
    </footer>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content bg-dark border-0">
                <div class="modal-body p-4">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-transparent border-0 text-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control bg-transparent border-0 text-white" 
                               placeholder="Search movies, cinemas..." id="globalSearch">
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div id="searchResults" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Swiper.js -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    
    <!-- Flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    
    <!-- AOS (Animate On Scroll) -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Highcharts (for admin dashboard) -->
    <script src="https://cdn.jsdelivr.net/npm/highcharts@11.2.0/highcharts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/highcharts@11.2.0/modules/heatmap.js"></script>
    
    <!-- Panzoom (for mobile seat map) -->
    <script src="https://cdn.jsdelivr.net/npm/@@panzoom/panzoom@4.5.1/dist/panzoom.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Initialize AOS -->
    <script>
        AOS.init({
            duration: 800,
            once: true,
            offset: 100
        });

        // Auto-dismiss alerts after 15 seconds
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert-dismissible');
                alerts.forEach(function(alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 10000); // 10 seconds (User asked for 15s in prompt "15s tự tắt đi" but usually 5-10s is better UX, I will set 10000ms as a reasonable middle ground or strictly 15000 if preferred. Let's do 15000 to match request exact).
        });
        
        // Update: User asked for 15s explcitly
        setTimeout(function() {
             var alerts = document.querySelectorAll('.alert-dismissible');
             alerts.forEach(function(alert) {
                 try {
                     var bsAlert = bootstrap.Alert.getInstance(alert) || new bootstrap.Alert(alert);
                     bsAlert.close();
                 } catch (e) { console.log(e); }
             });
        }, 15000);
    </script>
    
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>