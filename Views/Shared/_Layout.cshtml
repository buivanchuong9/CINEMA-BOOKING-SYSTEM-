<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CineMax</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    
    <!-- Swiper.js CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    
    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    
    <!-- AOS (Animate On Scroll) CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css">
    
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
    <!-- Sticky Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top cinema-navbar">
        <div class="container-fluid px-4">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-camera-reels-fill fs-3 me-2 accent-text"></i>
                <span class="fw-bold fs-4">CineMax</span>
            </a>
            
            <!-- Mobile Toggle -->
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" href="#movies" onclick="CineMax.showToast('Movies page coming soon!', 'info'); return false;">
                            <i class="bi bi-film me-1"></i> Movies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" href="#cinemas" onclick="CineMax.showToast('Cinemas page coming soon!', 'info'); return false;">
                            <i class="bi bi-building me-1"></i> Cinemas
                        </a>
                    </li>
                </ul>
                
                <!-- Search & Auth -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Search Icon -->
                    <button class="btn btn-link text-white p-0" type="button" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="bi bi-search fs-5"></i>
                    </button>
                    
                    <!-- Login/Register -->
                    <a class="btn btn-outline-light rounded-pill px-4" href="#login" onclick="showLoginModal(); return false;">
                        <i class="bi bi-person-circle me-1"></i> Login
                    </a>
                    <a class="btn btn-cinema-red rounded-pill px-4" href="#register" onclick="showRegisterModal(); return false;">
                        Register
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="cinema-footer mt-5 py-5">
        <div class="container">
            <div class="row g-4">
                <!-- Company Info -->
                <div class="col-lg-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-camera-reels-fill fs-3 me-2 accent-text"></i>
                        <h5 class="mb-0 fw-bold">CineMax</h5>
                    </div>
                    <p class="text-muted">
                        Experience the magic of cinema with premium comfort, 
                        cutting-edge technology, and unforgettable moments.
                    </p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="social-link">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-link">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-link">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="social-link">
                            <i class="bi bi-youtube"></i>
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-lg-2 col-md-4">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> About Us</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Promotions</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Gift Cards</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Contact</a></li>
                    </ul>
                </div>
                
                <!-- Support -->
                <div class="col-lg-2 col-md-4">
                    <h6 class="fw-bold mb-3">Support</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> FAQ</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Privacy Policy</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Terms of Use</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-1"></i> Refund Policy</a></li>
                    </ul>
                </div>
                
                <!-- Contact -->
                <div class="col-lg-4 col-md-4">
                    <h6 class="fw-bold mb-3">Contact Us</h6>
                    <ul class="list-unstyled footer-contact">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt-fill me-2 accent-text"></i>
                            <span>123 Cinema Street, District 1, HCMC</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill me-2 accent-text"></i>
                            <span>1900 xxxx</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill me-2 accent-text"></i>
                            <span>support@cinemax.com</span>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- Copyright -->
            <hr class="my-4 border-secondary">
            <div class="text-center text-muted">
                <p class="mb-0">&copy; @DateTime.Now.Year CineMax. All rights reserved. | Designed for Excellence</p>
            </div>
        </div>
    </footer>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content bg-dark border-0">
                <div class="modal-body p-4">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-transparent border-0 text-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control bg-transparent border-0 text-white" 
                               placeholder="Search movies, cinemas..." id="globalSearch">
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div id="searchResults" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Swiper.js -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    
    <!-- Flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    
    <!-- AOS (Animate On Scroll) -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Highcharts (for admin dashboard) -->
    <script src="https://cdn.jsdelivr.net/npm/highcharts@11.2.0/highcharts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/highcharts@11.2.0/modules/heatmap.js"></script>
    
    <!-- Panzoom (for mobile seat map) -->
    <script src="https://cdn.jsdelivr.net/npm/@@panzoom/panzoom@4.5.1/dist/panzoom.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Initialize AOS -->
    <script>
        AOS.init({
            duration: 800,
            once: true,
            offset: 100
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>