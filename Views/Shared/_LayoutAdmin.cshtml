<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CineMax Admin</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true"/>
</head>
<body class="admin-layout">
    <!-- Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <div class="d-flex align-items-center">
                <i class="bi bi-camera-reels-fill fs-3 me-2 accent-text"></i>
                <div>
                    <h5 class="mb-0 fw-bold">CineMax</h5>
                    <small class="text-muted">Admin Portal</small>
                </div>
            </div>
        </div>

        <div class="sidebar-nav">
            <!-- Dashboard -->
            <div class="nav-section">
                <small class="nav-section-title">MAIN</small>
                <a href="/Admin/Dashboard" class="nav-item active">
                    <i class="bi bi-grid-fill"></i>
                    <span>Dashboard</span>
                </a>
            </div>

            <!-- Management -->
            <div class="nav-section">
                <small class="nav-section-title">MANAGEMENT</small>
                <a href="/Admin/Movies" class="nav-item">
                    <i class="bi bi-film"></i>
                    <span>Movies</span>
                </a>
                <a href="/Admin/Showtimes" class="nav-item">
                    <i class="bi bi-calendar-event"></i>
                    <span>Showtimes</span>
                </a>
                <a href="/Admin/Cinemas" class="nav-item">
                    <i class="bi bi-building"></i>
                    <span>Cinemas</span>
                </a>
                <a href="/Admin/Bookings" class="nav-item">
                    <i class="bi bi-ticket-perforated"></i>
                    <span>Bookings</span>
                </a>
            </div>

            <!-- Users -->
            <div class="nav-section">
                <small class="nav-section-title">USERS</small>
                <a href="/Admin/Customers" class="nav-item">
                    <i class="bi bi-people"></i>
                    <span>Customers</span>
                </a>
                <a href="/Admin/Staff" class="nav-item">
                    <i class="bi bi-person-badge"></i>
                    <span>Staff</span>
                </a>
            </div>

            <!-- Finance -->
            <div class="nav-section">
                <small class="nav-section-title">FINANCE</small>
                <a href="/Admin/Revenue" class="nav-item">
                    <i class="bi bi-graph-up"></i>
                    <span>Revenue</span>
                </a>
                <a href="/Admin/Reports" class="nav-item">
                    <i class="bi bi-file-earmark-bar-graph"></i>
                    <span>Reports</span>
                </a>
            </div>

            <!-- Settings -->
            <div class="nav-section">
                <small class="nav-section-title">SYSTEM</small>
                <a href="/Admin/Settings" class="nav-item">
                    <i class="bi bi-gear"></i>
                    <span>Settings</span>
                </a>
                <a href="/Admin/Logs" class="nav-item">
                    <i class="bi bi-clock-history"></i>
                    <span>Activity Logs</span>
                </a>
            </div>
        </div>

        <div class="sidebar-footer">
            <a href="/" class="btn btn-outline-light w-100 rounded-pill">
                <i class="bi bi-box-arrow-left me-2"></i>
                Back to Site
            </a>
        </div>
    </aside>

    <!-- Main Content Wrapper -->
    <div class="admin-content-wrapper">
        <!-- Top Navbar -->
        <nav class="admin-topbar">
            <div class="d-flex justify-content-between align-items-center w-100">
                <!-- Left: Sidebar Toggle & Search -->
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-link text-white p-0" id="sidebarToggle">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    
                    <div class="topbar-search d-none d-md-block">
                        <i class="bi bi-search"></i>
                        <input type="text" placeholder="Search..." class="form-control">
                    </div>
                </div>

                <!-- Right: Notifications & User -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Notifications -->
                    <div class="dropdown">
                        <button class="btn btn-link text-white position-relative p-0" data-bs-toggle="dropdown">
                            <i class="bi bi-bell fs-5"></i>
                            <span class="notification-badge">3</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end admin-dropdown">
                            <h6 class="dropdown-header">Notifications</h6>
                            <a class="dropdown-item" href="#">
                                <div class="d-flex">
                                    <i class="bi bi-ticket text-cinema-red me-2"></i>
                                    <div>
                                        <div class="fw-semibold">New Booking</div>
                                        <small class="text-muted">Avatar - 2 tickets</small>
                                    </div>
                                </div>
                            </a>
                            <a class="dropdown-item" href="#">
                                <div class="d-flex">
                                    <i class="bi bi-star text-popcorn-gold me-2"></i>
                                    <div>
                                        <div class="fw-semibold">New Review</div>
                                        <small class="text-muted">5 stars - Oppenheimer</small>
                                    </div>
                                </div>
                            </a>
                            <a class="dropdown-item" href="#">
                                <div class="d-flex">
                                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                                    <div>
                                        <div class="fw-semibold">Low Inventory</div>
                                        <small class="text-muted">Hall 3 seats need maintenance</small>
                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-center text-cinema-red" href="#">View All</a>
                        </div>
                    </div>

                    <!-- User Profile -->
                    <div class="dropdown">
                        <button class="btn btn-link text-white d-flex align-items-center gap-2 p-0" data-bs-toggle="dropdown">
                            <img src="https://i.pravatar.cc/150?img=68" alt="Admin" class="admin-avatar">
                            <div class="text-start d-none d-md-block">
                                <div class="fw-semibold">Admin User</div>
                                <small class="text-muted">Administrator</small>
                            </div>
                            <i class="bi bi-chevron-down"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end admin-dropdown">
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-person me-2"></i> Profile
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-gear me-2"></i> Settings
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="#">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <main class="admin-main-content">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="admin-footer">
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted">&copy; @DateTime.Now.Year CineMax. All rights reserved.</span>
                <span class="text-muted">Version 1.0.0</span>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/highcharts@11.2.0/highcharts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/highcharts@11.2.0/modules/heatmap.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
