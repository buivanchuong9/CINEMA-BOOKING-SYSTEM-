@using BE.Core.Entities.Movies
@{
    ViewData["Title"] = "Trang Chủ - CineMax";
    var nowShowing = ViewBag.NowShowing as List<Movie> ?? new List<Movie>();
    var comingSoon = ViewBag.ComingSoon as List<Movie> ?? new List<Movie>();
}

<!-- Hero Banner với Nhiều Posters Chạy (Style Beta/CGV) -->
@if (nowShowing.Any())
{
    <section class="hero-banner-section">
        <div class="swiper heroBannerSwiper">
            <div class="swiper-wrapper">
                @foreach (var movie in nowShowing)
                {
                    var posterUrl = !string.IsNullOrEmpty(movie.PosterUrl) 
                        ? movie.PosterUrl 
                        : "https://picsum.photos/800/450?random=" + movie.Id;
                    
                    <div class="swiper-slide">
                        <a href="/Movies/Details/@movie.Id" class="hero-banner-item">
                            <div class="banner-image-wrapper">
                                <img src="@posterUrl" alt="@movie.Title" class="banner-image" />
                                <div class="banner-overlay">
                                    <div class="banner-info">
                                        <h3 class="banner-title">@movie.Title</h3>
                                        @if (movie.Rating.HasValue)
                                        {
                                            <div class="banner-rating">
                                                <i class="bi bi-star-fill text-warning"></i>
                                                @movie.Rating.Value.ToString("0.0")
                                            </div>
                                        }
                                        <button class="btn btn-cinema-red btn-sm mt-2">
                                            <i class="bi bi-play-fill me-1"></i>
                                            Xem Ngay
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
            
            <!-- Navigation -->
            <div class="swiper-button-next hero-banner-nav"></div>
            <div class="swiper-button-prev hero-banner-nav"></div>
        </div>
    </section>
}

<!-- Now Showing Section -->
<section class="py-5 bg-dark-gradient">
    <div class="container">
        <div class="section-header text-center mb-5" data-aos="fade-up">
            <h2 class="display-5 fw-bold mb-3">
                <i class="bi bi-film me-3 text-cinema-red"></i>
                PHIM ĐANG CHIẾU
            </h2>
            <p class="text-muted lead">Những bộ phim hot nhất hiện nay</p>
        </div>

        @if (nowShowing.Any())
        {
            <div class="row g-4">
                @foreach (var movie in nowShowing)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="@(nowShowing.IndexOf(movie) * 100)">
                        <div class="movie-card-premium">
                            <div class="movie-poster-wrapper">
                                @if (!string.IsNullOrEmpty(movie.PosterUrl))
                                {
                                    <img src="@movie.PosterUrl" alt="@movie.Title" class="movie-poster" />
                                }
                                else
                                {
                                    <div class="movie-poster-placeholder">
                                        <i class="bi bi-film display-1"></i>
                                    </div>
                                }
                                
                                <div class="movie-overlay">
                                    <div class="overlay-content">
                                        @if (movie.Rating.HasValue)
                                        {
                                            <div class="rating-badge mb-3">
                                                <i class="bi bi-star-fill"></i>
                                                @movie.Rating.Value.ToString("0.0")
                                            </div>
                                        }
                                        <h5 class="movie-title-overlay mb-3">@movie.Title</h5>
                                        <div class="overlay-actions">
                                            <a href="/Movies/Details/@movie.Id" class="btn btn-cinema-red btn-sm w-100 mb-2">
                                                <i class="bi bi-ticket-perforated me-1"></i>
                                                Đặt Vé
                                            </a>
                                            <a href="/Movies/Details/@movie.Id" class="btn btn-outline-light btn-sm w-100">
                                                <i class="bi bi-info-circle me-1"></i>
                                                Chi Tiết
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(movie.AgeRating))
                                {
                                    <div class="age-badge">@movie.AgeRating</div>
                                }
                            </div>

                            <div class="movie-info">
                                <h6 class="movie-title">@movie.Title</h6>
                                <div class="movie-meta">
                                    <span class="me-3">
                                        <i class="bi bi-clock text-cinema-red"></i>
                                        @movie.Duration'
                                    </span>
                                    @if (movie.Rating.HasValue)
                                    {
                                        <span>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            @movie.Rating.Value.ToString("0.0")
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- Coming Soon Section -->
@if (comingSoon.Any())
{
    <section class="py-5 bg-dark">
        <div class="container">
            <div class="section-header text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">
                    <i class="bi bi-calendar-event me-3 text-popcorn-gold"></i>
                    PHIM SẮP CHIẾU
                </h2>
            </div>

            <div class="row g-4">
                @foreach (var movie in comingSoon.Take(4))
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="coming-soon-card">
                            @if (!string.IsNullOrEmpty(movie.PosterUrl))
                            {
                                <img src="@movie.PosterUrl" alt="@movie.Title" class="coming-soon-poster" />
                            }
                            <div class="coming-soon-info">
                                <span class="release-badge">
                                    <i class="bi bi-calendar-check"></i>
                                    @movie.ReleaseDate.ToString("dd/MM/yyyy")
                                </span>
                                <h5 class="mt-3">@movie.Title</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

@section Scripts {
    <script>
        // Hero Banner Carousel (Style Beta/CGV)
        new Swiper('.heroBannerSwiper', {
            slidesPerView: 1,
            spaceBetween: 0,
            loop: true,
            autoplay: {
                delay: 4000,
                disableOnInteraction: false,
            },
            speed: 800,
            effect: 'fade',
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                768: {
                    slidesPerView: 1,
                },
            }
        });
    </script>
}

<style>
    /* Hero Banner Section */
    .hero-banner-section {
        position: relative;
        height: 70vh;
        min-height: 500px;
        background: #000;
        overflow: hidden;
    }

    .heroBannerSwiper {
        width: 100%;
        height: 100%;
    }

    .hero-banner-item {
        display: block;
        height: 100%;
        text-decoration: none;
        color: inherit;
    }

    .banner-image-wrapper {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .banner-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .hero-banner-item:hover .banner-image {
        transform: scale(1.05);
    }

    .banner-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.95) 0%, transparent 100%);
        padding: 60px 40px 40px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .hero-banner-item:hover .banner-overlay {
        opacity: 1;
    }

    .banner-title {
        font-size: 2rem;
        font-weight: bold;
        color: #fff;
        margin-bottom: 10px;
    }

    .banner-rating {
        color: #fff;
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    /* Navigation */
    .hero-banner-nav {
        color: #fff !important;
        background: rgba(220, 38, 38, 0.8);
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }

    .hero-banner-nav:hover {
        background: rgba(220, 38, 38, 1);
    }

    /* Background Gradient */
    .bg-dark-gradient {
        background: linear-gradient(180deg, #0a0a0a 0%, #1a1a1a 100%);
    }

    /* Movie Cards */
    .movie-card-premium {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.03);
        transition: all 0.4s ease;
    }

    .movie-card-premium:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(220, 38, 38, 0.3);
    }

    .movie-poster-wrapper {
        position: relative;
        overflow: hidden;
        aspect-ratio: 2/3;
    }

    .movie-poster {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .movie-card-premium:hover .movie-poster {
        transform: scale(1.1);
    }

    .movie-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.95), transparent 50%);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: flex-end;
        padding: 20px;
    }

    .movie-card-premium:hover .movie-overlay {
        opacity: 1;
    }

    .rating-badge {
        background: linear-gradient(135deg, #dc2626, #991b1b);
        padding: 8px 16px;
        border-radius: 20px;
        display: inline-block;
        font-weight: bold;
    }

    .age-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: #dc2626;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: bold;
        z-index: 5;
    }

    .movie-info {
        padding: 15px;
    }

    .movie-title {
        font-weight: 600;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 40px;
        margin-bottom: 8px;
    }

    .movie-meta {
        font-size: 0.9rem;
        color: #999;
    }

    /* Coming Soon */
    .coming-soon-card {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .coming-soon-card:hover {
        transform: translateY(-5px);
    }

    .coming-soon-poster {
        width: 100%;
        aspect-ratio: 2/3;
        object-fit: cover;
    }

    .coming-soon-info {
        padding: 20px;
        background: rgba(255, 255, 255, 0.05);
    }

    .release-badge {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .hero-banner-section {
            height: 50vh;
            min-height: 400px;
        }
        
        .banner-title {
            font-size: 1.5rem;
        }
    }
</style>